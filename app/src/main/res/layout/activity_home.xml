<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">

    <RelativeLayout
        android:id="@+id/container_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:padding="@dimen/default_padding">

        <ImageView
            android:id="@+id/imageview_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/textview_user_display_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/imageview_user"
            android:gravity="center|start"
            android:hint="No display name found!"
            android:text="User display name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_user_email"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/textview_user_display_name"
            android:layout_toRightOf="@id/imageview_user"
            android:gravity="center|start"
            android:hint="No email found!"
            android:text="User email" />

        <TextView
            android:id="@+id/textview_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/textview_user_email"
            android:layout_toRightOf="@id/imageview_user"
            android:gravity="center|start"
            android:hint="No phone found!"
            android:text="User phone" />

        <TextView
            android:id="@+id/textview_auth_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/textview_user_phone"
            android:layout_toRightOf="@id/imageview_user"
            android:gravity="center|start"
            android:text="Auth type" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/button_db_operations"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="DATABASE OPERATIONS" />

    </LinearLayout>

</LinearLayout>